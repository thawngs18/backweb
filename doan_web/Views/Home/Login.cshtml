@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <title>Login</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1a1a1a 0%, #323232 100%);
            color: #ffbe33;
            min-height: 100vh;
        }

        .card {
            background: rgba(34, 40, 49, 0.95);
            border: none;
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-body {
            padding: 2.5rem;
        }

        h3 {
            color: #ffbe33;
            font-weight: 600;
            margin-bottom: 2rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-label {
            color: #ffbe33;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 190, 51, 0.2);
            border-radius: 10px;
            color: #ffffff;
            padding: 12px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                background-color: rgba(255, 255, 255, 0.15);
                border-color: #ffbe33;
                box-shadow: 0 0 0 0.2rem rgba(255, 190, 51, 0.25);
                color: #ffffff;
            }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.5);
            }

        .btn-primary {
            background: linear-gradient(45deg, #ffbe33, #ffd700);
            border: none;
            border-radius: 10px;
            color: #222831 !important;
            font-weight: 600;
            padding: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #ffd700, #ffbe33);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 190, 51, 0.4);
                color: #222831 !important;
            }

        .btn-outline-primary {
            background: transparent;
            border: 2px solid #ffbe33;
            border-radius: 10px;
            color: #ffbe33 !important;
            font-weight: 600;
            padding: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover {
                background: #ffbe33;
                color: #222831 !important;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 190, 51, 0.4);
            }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.2);
            border: none;
            border-radius: 10px;
            color: #ff6b6b;
        }

        /* Media Query cho màn hình nhỏ */
        @@media screen and (max-width: 768px) {
            .card-body {
                padding: 1.5rem;
            }

            .btn-primary {
                padding: 10px;
            }

            h3 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <h3 class="text-center">Welcome Back</h3>
                        @if (ViewBag.ThongBao != null)
                        {
                            <div class="alert alert-danger text-center mb-4">
                                <h5 class="mb-0">@ViewBag.ThongBao</h5>
                            </div>
                        }
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="mb-4">
                                <label for="TaiKhoan" class="form-label">Username</label>
                                <input type="text" name="TaiKhoan" id="TaiKhoan" class="form-control" placeholder="Enter your username" required />
                            </div>
                            <div class="mb-4">
                                <label for="MatKhau" class="form-label">Password</label>
                                <input type="password" name="MatKhau" id="MatKhau" class="form-control" placeholder="Enter your password" required />
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                                <a href="@Url.Action("DangKy", "Home")" class="btn btn-outline-primary btn-lg">Sign Up</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>