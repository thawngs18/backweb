@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <title>Login</title>
    <style>
        .btn-primary {
            background-color: #ffbe33 !important;
            border-color: #ffbe33 !important;
            color: #222831 !important;
        }

            .btn-primary:hover {
                background-color: #e0aa2d !important; /* Màu tối hơn khi hover */
                border-color: #e0aa2d !important;
                color: #ffffff !important; /* Màu chữ khi hover */
            }
    </style>
</head>
<body style="background-color: rgba(8, 8, 8, 0.8); color: #ffbe33;">

    <div class="container">
        <div class="row justify-content-center align-items-center" style="height: 100vh;">
            <div class="col-md-6">
                <div class="card shadow" style="border-radius: 15px; background-color: #222831; color: #ffbe33;">
                    <div class="card-body" style="border-radius: 15px;">
                        <h3 class="text-center mb-4" style="color: #ffbe33;">Login to Your Account</h3>

                        @if (ViewBag.ThongBao != null)
                        {
                            <div class="alert alert-danger text-center">
                                <h5>@ViewBag.ThongBao</h5>
                            </div>
                        }

                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label for="TaiKhoan" class="form-label fw-bold" style="color: #ffbe33;">Username</label>
                                <input type="text" name="TaiKhoan" id="TaiKhoan" class="form-control" placeholder="Enter username" required />
                            </div>

                            <div class="mb-3">
                                <label for="MatKhau" class="form-label fw-bold" style="color: #ffbe33;">Password</label>
                                <input type="password" name="MatKhau" id="MatKhau" class="form-control" placeholder="Enter password" required />
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Login</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
