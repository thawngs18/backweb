@{
    ViewData["Title"] = "Đăng Ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <title>Đăng Ký</title>
    <style>
        body {
            background-color: rgba(8, 8, 8, 0.8);
            color: #ffbe33;
        }

        .card {
            border-radius: 15px;
            background-color: #222831;
            color: #ffbe33;
        }

        .btn-primary {
            background-color: #ffbe33 !important;
            border-color: #ffbe33 !important;
            color: #222831 !important;
        }

            .btn-primary:hover {
                background-color: #e0aa2d !important; /* Màu tối hơn khi hover */
                border-color: #e0aa2d !important;
                color: #ffffff !important; /* Màu chữ khi hover */
            }

      
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center align-items-center" style="height: 100vh;">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="text-center mb-4">Đăng Ký Tài Khoản Mới</h3>
                        @if (ViewBag.ThongBao != null)
                        {
                            <div class="alert alert-danger text-center">
                                <h5>@ViewBag.ThongBao</h5>
                            </div>
                        }

                        @using (Html.BeginForm("DangKy", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-row">
                                <div class="col-md-12 mb-3">
                                    <label for="TaiKhoan" class="form-label fw-bold">Tài Khoản</label>
                                    <input type="text" name="TaiKhoan" class="form-control" id="TaiKhoan" placeholder="Nhập tài khoản" value="@Model.TaiKhoan" required />
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label for="Ten" class="form-label fw-bold">Tên</label>
                                    <input type="text" name="Ten" class="form-control" id="Ten" placeholder="Nhập tên" value="@Model.Ten" required />
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label for="Email" class="form-label fw-bold">Email</label>
                                    <input type="email" name="Email" class="form-control" id="Email" placeholder="Nhập email" value="@Model.Email" required />
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label for="MatKhau" class="form-label fw-bold">Mật Khẩu</label>
                                    <input type="password" name="MatKhau" class="form-control" id="MatKhau" placeholder="Nhập mật khẩu" required />
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label for="MatKhauXacNhan" class="form-label fw-bold">Xác Nhận Mật Khẩu</label>
                                    <input type="password" name="MatKhauXacNhan" class="form-control" id="MatKhauXacNhan" placeholder="Xác nhận mật khẩu" required />
                                </div>

                                <div class="col-md-12">
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg">Đăng Ký</button>
                                    </div>
                                </div>
                                <div class="col-md-12 mt-3 text-center">
                                    <p>Đã có tài khoản? <a href="@Url.Action("Login", "Home")" class="text-decoration-none">Đăng Nhập</a></p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
